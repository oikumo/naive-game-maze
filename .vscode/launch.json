{
    "version": "0.3.0",
    "configurations": [
        {
            "name": "Launch Maze",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "file": "${workspaceFolder}/dist/index.html",
            "pathMappings": [
                {
                    "url": "webpack://",
                    "path": "${workspaceFolder}"
                }
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tests",
            "program": "${workspaceFolder}/test-runner.mjs",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}